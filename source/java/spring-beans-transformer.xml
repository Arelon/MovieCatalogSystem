<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="transformer" class="net.milanaleksic.mcs.infrastructure.gui.transformer.Transformer">
    </bean>

    <bean id="converterFactory" class="net.milanaleksic.mcs.infrastructure.gui.transformer.ConverterFactory">
        <property name="registeredConverters">
            <map>
                <entry key="#{ T(java.lang.Object) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.ObjectConverter"/>
                </entry>
                <entry key="#{ T(java.lang.String) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.StringConverter"/>
                </entry>
                <entry key="#{ T(boolean) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.BooleanConverter"/>
                </entry>
                <entry key="#{ T(int) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.IntegerConverter"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Point) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.PointConverter"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Color) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.ColorConverter"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Font) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.FontConverter"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Image) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.ImageConverter"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>
