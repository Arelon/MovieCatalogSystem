<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="transformer" class="net.milanaleksic.mcs.infrastructure.gui.transformer.Transformer">
    </bean>

    <bean id="convertorFactory" class="net.milanaleksic.mcs.infrastructure.gui.transformer.ConvertorFactory">
        <property name="registeredConvertors">
            <map>
                <entry key="#{ T(java.lang.String) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.StringConvertor"/>
                </entry>
                <entry key="#{ T(boolean) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.BooleanConvertor"/>
                </entry>
                <entry key="#{ T(int) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.IntegerConvertor"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Point) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.PointConvertor"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Color) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.ColorConvertor"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Font) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.FontConvertor"/>
                </entry>
                <entry key="#{ T(org.eclipse.swt.graphics.Image) }">
                    <bean class="net.milanaleksic.mcs.infrastructure.gui.transformer.ImageConvertor"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>
