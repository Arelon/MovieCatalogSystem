<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />

    <import resource="spring-beans-gui.xml" />

    <import resource="spring-beans-db.xml" />

    <bean id="programArgsManager" class="net.milanaleksic.mcs.config.ProgramArgsService" />

	<bean id="applicationManager" class="net.milanaleksic.mcs.ApplicationManager">
        <property name="lifecycleListeners">
            <set>
                <ref bean="splashScreenManager" />
                <bean class="net.milanaleksic.mcs.config.UserConfigurationManager" />
                <bean class="net.milanaleksic.mcs.util.StatisticsManager" />
                <ref bean="restoreManager" />
            </set>
        </property>
	</bean>

</beans>