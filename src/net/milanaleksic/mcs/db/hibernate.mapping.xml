<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="net.milanaleksic.mcs.db.Loger" table="LOGER" schema="DB2ADMIN">
        <cache usage="nonstrict-read-write" />
        <id name="idloger" type="int">
            <column name="IDLOGER" />
            <generator class="identity" />
        </id>
        <many-to-one name="logerAkcija" class="net.milanaleksic.mcs.db.LogerAkcija" fetch="select">
            <column name="IDLOGERAKCIJA" not-null="true" />
        </many-to-one>
        <property name="kontekst" type="string">
            <column name="KONTEKST" length="100" not-null="true" />
        </property>
        <property name="vreme" type="timestamp">
            <column name="VREME" length="26" not-null="true" />
        </property>
    </class>
    
    <class name="net.milanaleksic.mcs.db.LogerAkcija" table="LOGERAKCIJA" schema="DB2ADMIN" mutable="false">
        <cache usage="nonstrict-read-write" />
        <id name="idlogerakcija" type="int">
            <column name="IDLOGERAKCIJA" />
            <generator class="identity" />
        </id>
        <property name="naziv" type="string">
            <column name="NAZIV" length="100" not-null="true" />
        </property>
        <set name="logers" inverse="true">
            <key>
                <column name="IDLOGERAKCIJA" not-null="true" />
            </key>
            <one-to-many class="net.milanaleksic.mcs.db.Loger" />
        </set>
    </class>
    
    <class name="net.milanaleksic.mcs.db.Film" table="FILM" schema="DB2ADMIN">
        <cache usage="nonstrict-read-write" />
        <id name="idfilm" type="int">
            <column name="IDFILM" />
            <generator class="identity" />
        </id>
        <many-to-one name="zanr" class="net.milanaleksic.mcs.db.Zanr" fetch="select">
            <column name="IDZANR" not-null="true" />
        </many-to-one>
        <property name="nazivfilma" type="string">
            <column name="NAZIVFILMA" length="100" not-null="true" />
        </property>
        <property name="prevodnazivafilma" type="string">
            <column name="PREVODNAZIVAFILMA" length="100" not-null="true" />
        </property>
        <property name="godina" type="int">
            <column name="GODINA" not-null="true" />
        </property>
        <property name="komentar" type="string">
            <column name="KOMENTAR" length="1000" />
        </property>
        <property name="imdbrejting" type="big_decimal">
            <column name="IMDBREJTING" precision="3" scale="1" not-null="true" />
        </property>
        <set name="medijs" inverse="true" table="ZAUZIMA" schema="DB2ADMIN">
            <key>
                <column name="IDFILM" not-null="true" />
            </key>
            <many-to-many entity-name="net.milanaleksic.mcs.db.Medij">
                <column name="IDMEDIJ" not-null="true" />
            </many-to-many>
        </set>
    </class>
    
    <class name="net.milanaleksic.mcs.db.Medij" table="MEDIJ" schema="DB2ADMIN">
        <cache usage="nonstrict-read-write" />
        <id name="idmedij" type="int">
            <column name="IDMEDIJ" />
            <generator class="identity" />
        </id>
        <many-to-one name="tipMedija" class="net.milanaleksic.mcs.db.TipMedija" fetch="select">
            <column name="IDTIP" not-null="true" />
        </many-to-one>
        <many-to-one name="pozicija" class="net.milanaleksic.mcs.db.Pozicija" fetch="select">
            <column name="IDPOZICIJA" not-null="true" />
        </many-to-one>
        <property name="indeks" type="int">
            <column name="INDEKS" not-null="true" />
        </property>
        <set name="films" table="ZAUZIMA" schema="DB2ADMIN">
            <key>
                <column name="IDMEDIJ" not-null="true" />
            </key>
            <many-to-many entity-name="net.milanaleksic.mcs.db.Film">
                <column name="IDFILM" not-null="true" />
            </many-to-many>
        </set>
    </class>
    
    <class name="net.milanaleksic.mcs.db.Pozicija" table="POZICIJA" schema="DB2ADMIN">
        <cache usage="nonstrict-read-write" />
        <id name="idpozicija" type="int">
            <column name="IDPOZICIJA" />
            <generator class="identity" />
        </id>
        <property name="pozicija" type="string">
            <column name="POZICIJA" length="100" not-null="true" />
        </property>
        <set name="medijs" inverse="true">
            <key>
                <column name="IDPOZICIJA" not-null="true" />
            </key>
            <one-to-many class="net.milanaleksic.mcs.db.Medij" />
        </set>
    </class>
    
    <class name="net.milanaleksic.mcs.db.TipMedija" table="TIPMEDIJA" schema="DB2ADMIN">
        <cache usage="nonstrict-read-write" />
        <id name="idtip" type="int">
            <column name="IDTIP" />
            <generator class="identity" />
        </id>
        <property name="naziv" type="string">
            <column name="NAZIV" length="100" not-null="true" />
        </property>
        <set name="medijs" inverse="true">
            <key>
                <column name="IDTIP" not-null="true" />
            </key>
            <one-to-many class="net.milanaleksic.mcs.db.Medij" />
        </set>
    </class>
    
    <class name="net.milanaleksic.mcs.db.Zanr" table="ZANR" schema="DB2ADMIN" mutable="false">
        <cache usage="nonstrict-read-write" />
        <id name="idzanr" type="int">
            <column name="IDZANR" />
            <generator class="identity" />
        </id>
        <property name="zanr" type="string">
            <column name="ZANR" length="100" not-null="true" />
        </property>
        <set name="films" inverse="true">
            <key>
                <column name="IDZANR" not-null="true" />
            </key>
            <one-to-many class="net.milanaleksic.mcs.db.Film" />
        </set>
    </class>
</hibernate-mapping>
